@model APPBASE.Models.BaseVM
@using APPBASE.Helpers
@using APPBASE.Svcapp

@{
    //ViewBag.Title = "Informasi " + ViewContext.RouteData.Values["controller"] + "/" + ViewContext.RouteData.Values["action"];
    ViewBag.Title = "Informasi Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.DataNotFound == valFLAG.FLAG_TRUE) {
      Html.RenderPartial("_PartialConfirmDataNotFound"); 
}

@{string vsClassBP_STS = "";}

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title"></h3>
        <div class="box-tools">
            <div class="input-group">
                <input type="text" id="searchValue" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Cari data"/>
                <div class="input-group-btn">
                    <button class="btn btn-flat btn-sm btn-info"><i class="fa fa-search"></i></button>
                    <a href="@Url.Action("Create")" class="btn btn-flat btn-sm btn-warning" style="margin-left:5px; color:White;"><i class="fa fa-plus"></i> Tambah data</a>
                </div>
            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
    </div><!-- /.box-body -->
</div><!-- /.box -->

@section scripts {

<script type="text/javascript">
    $(document).ready(function () {
        /*=========================================
        INITIALIZE
        =========================================*/
        doSearchAbleTable('#searchValue', '', '.SEARCHABLE_ROWS');

        /*=========================================
        EVENTS
        =========================================*/
    });   //End $(document).ready
</script>

}
