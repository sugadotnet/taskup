@using APPBASE.Helpers

<!DOCTYPE html>
<html class="bg-black" lang="en">
    <head>
        <meta charset="UTF-8">
        <title>@ViewBag.Appname | @ViewBag.Title</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

        <!-- csslayoutlogin -->
        <link href="@Url.Content("~/")Content/AdminLTE/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/")Content/AdminLTE/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/")Content/AdminLTE/css/AdminLTE.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/")Content/SiteLogin.css" rel="stylesheet" type="text/css" />
        @RenderSection("includeTOP", required: false)
    </head>
    <body class="bg-black">


        <div class="form-box" id="login-box">
            <div class="header"><img style="width:auto; height: 90%; margin:0;" src="@Url.Content("~/")Images/logonav.png" alt="@ViewBag.Appname" /></div>
            @RenderBody()
        </div>



        @{Html.RenderPartial("_PartialJSVAR");}

        <!-- JSLayoutLogin -->
        <script src="@Url.Content("~/")Scripts/jquery-2.1.1.min.js"></script>
        <script src="@Url.Content("~/")Scripts/bootstrap.min.js"></script>
        
        @RenderSection("includeTOP", required: false)
        @RenderSection("scripts", required: false)
    </body>
</html>
